{% block page_product_detail_back_in_stock_form %}
    <form
            id="productDetailPageBackInStockForm"
            data-klaviyo-back-in-stock-subscriber-event-tracking-component
            data-klaviyo-back-in-stock-subscriber-event-tracking-component-options='{
                "snippets": {
                    "successMessage": "{{ "back-in-stock.productDetail.successMessage"|trans }}",
                    "failedMessage": "{{ "back-in-stock.productDetail.failedMessage"|trans }}",
                    "exceptionMessage": "{{ "back-in-stock.productDetail.exceptionMessage"|trans }}"
                }
            }'
            data-action=
            "{% block page_product_detail_back_in_stock_form_action %}
            {% endblock %}"
            method="post"
            class="back-in-stock">
        {% block page_product_detail_back_in_stock_container %}
            <div class="form-row back-in-stock-container">
                {% block page_product_detail_back_in_stock_apiKey_input %}
                    <input type="hidden" name="a" value="{{ publicApiKey }}"/>
                {% endblock %}
                {% block page_product_detail_back_in_stock_email_container %}
                    <label>
                        <input class="form-control" type="email" name="email" required placeholder="email">
                    </label>
                {% endblock %}
                {% block page_product_detail_back_in_stock_variant_input %}
                    <input type="hidden" name="variant" value="{{ page.product.id }}"/>
                {% endblock %}
                {% block page_product_detail_back_in_stock_platform_input %}
                    <input type="hidden" name="platform" value="shopware-6"/>
                {% endblock %}
                {% block page_product_detail_back_in_stock_variant_subscribe_input %}
                    <input
                            id="subscribeToNewsletter"
                            class="custom-control-input"
                            type="checkbox"
                            name="subscribe"
                    >
                    <label class="custom-control-label" for="subscribeToNewsletter">
                        Subscribe to newsletter
                    </label>
                {% endblock %}
                {% block page_product_detail_back_in_stock_button %}
                    <button class="btn btn-outline-primary btn-block btn-notify">Subscribe</button>
                {% endblock %}
            </div>
        {% endblock %}
        {% block product_detail_get_notified_message %}
            <div id="message-container" role="alert" class="alert d-none alert-has-icon">
                <span class="icon icon-checkmark-circle">
