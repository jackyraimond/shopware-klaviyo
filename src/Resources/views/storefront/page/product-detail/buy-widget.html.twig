{% sw_extends '@Storefront/storefront/page/product-detail/buy-widget.html.twig' %}

{% block page_product_detail_buy_form %}
    {{ parent() }}
    {% if page.getExtension('klaviyoIntegrationPluginExtension').configuration.trackSubscribedToBackInStock and
        page.extensions.klaviyoIntegrationPluginExtension.backInStockData %}
        {% set publicApiKey = page.getExtension('klaviyoIntegrationPluginExtension').configuration.publicApiKey %}
        {% sw_include '@Storefront/storefront/page/product-detail/back-in-stock-form.html.twig' with {publicApiKey: publicApiKey} %}
    {% endif %}
{% endblock %}
