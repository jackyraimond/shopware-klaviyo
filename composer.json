{
    "version": "1.0.9",
    "name": "od/sw6-klaviyo-integration",
    "description": "Shopware 6 plugin for Klaviyo integration",
    "type": "shopware-platform-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Overdose",
            "homepage": "https://overdose.digital/"
        }
    ],
    "autoload": {
        "psr-4": {
            "Klaviyo\\Integration\\": "src/"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "dependencies/*",
            "options": {
                "symlink": false
            }
        }
    ],
    "extra": {
        "shopware-plugin-class": "Klaviyo\\Integration\\overd_klaviyo",
        "plugin-icon": "src/Resources/config/plugin.png",
        "label": {
            "de-DE": "Klaviyo: Email Marketing & SMS",
            "en-GB": "Klaviyo: Email Marketing & SMS"
        },
        "description": {
            "de-DE": "Klaviyo: Email Marketing & SMS",
            "en-GB": "Klaviyo: Email Marketing & SMS"
        }
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "shopware/administration": ">=6.4.4.0",
        "shopware/core": ">=6.4.4.0",
        "shopware/storefront": ">=6.4.4.0",
        "od/sw6-job-scheduler": "^1.0.3",
        "ext-json": "*"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.9.1"
    }
}
